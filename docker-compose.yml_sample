version: '2'
services:
  web:
    build: .
    image: culturagovbr/salic-br:1.3
    container_name: salic-br
    ports:
     - "80:80"
     - "9000:9000"
    volumes:
     - /var/www/project/salic-br:/var/www/salic-br
     - /var/www/project/log/apache2:/var/log/apache2
     - /var/www/project/salic-br/public/txt:/var/www/salic-br/public/txt/
     - /var/www/project/salic-br/public/plenaria:/var/www/salic-br/public/plenaria/
    environment:
     - APPLICATION_ENV=development
     # debug
     - XDEBUG_CONFIG="remote_host=192.168.65.1"
     - PHP_IDE_CONFIG="serverName=test"