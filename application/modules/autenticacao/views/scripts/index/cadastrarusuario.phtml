    <script>
    $(function(){
        $('#cpf').keydown(function(){
            validandoCPF(this);
    }).keypress(function(){
        validandoCPF(this);
    }).keyup(function(){
        validandoCPF(this);
    });

    $('#emailConf').keyup(function(){

        if($('#email').val().length <= $(this).val().length){
            if($('#email').val() != $(this).val())
                $('#mensemailConf').html('');
            else
                $('#mensemailConf').html('');
        }
        else{
            $('#mensemailConf').html('');
        }
    });


    $("#cadastraUsuario").submit(function(){
        var validado = true;

        if($('#cpf').val().length==14){
            validandoCPF($('#cpf'));
            if(!validaCPF($('#cpf').val())){
                validado = false;
           }
       }

       if($('#email').val() != $('#emailConf').val()){
           $('#mensemailConf').html('Digite correto o seu email!');
           validado = false;
       }
       else
           $('#mensemailConf').html('');

       return validado;
    });
});



function validandoCPF(este){
    mascaraCnpjCpf(este);
    if($(este).val().length==14)
        if(!validaCPF($(este).val()))
            $('#mensCPF').html('Digite um CPF v&aacute;lido!');

        else
            $('#mensCPF').html('');
    else
        $('#mensCPF').html('');

}

</script>
