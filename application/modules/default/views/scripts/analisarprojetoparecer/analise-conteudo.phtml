            var parecer = CKEDITOR.instances['ParecerDeConteudo'].getData().toString().replace(/(<.*?>)|(&nbsp;)|(\s+)/g,'');
//            var parecer = $('#ParecerDeConteudo').val();
            if( parecer.length  < 11){
