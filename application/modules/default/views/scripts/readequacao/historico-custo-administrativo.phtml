		fonte   = $(item).attr('fonte' + planilha);
		produto = $(item).attr('produto' + planilha);
		$(".produto" + planilha + "[produto" + planilha + "='" + produto + "'][fonte" + planilha + "='" + fonte + "']").css('display', adisplay);
