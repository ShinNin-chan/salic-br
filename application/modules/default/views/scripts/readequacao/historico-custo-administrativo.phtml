		fonte = $(item).attr('fonte' + planilha);
		$(".master" + planilha + "[fonte" + planilha + "='" + fonte + "']").css('display', adisplay);
		$(".clickproduto" + planilha + ", .clicketapa" + planilha + ", .clickcidade" + planilha).removeClass('icn_mais').addClass('icn_menos');
	}
	if (tipo == produto)
