<script>

    function confirmarPagamento(id){
        
        $("#dialog").html('Deseja enviar para pagamento?');
        
        $("#dialog").dialog("destroy");
        $("#dialog").dialog({
            width: '400px',
            modal: true,
            draggable: false,
            resizable: false,
            closeOnEscape: false,
            title: 'Confirmação',
            buttons: { 
                Não:function() {
                    $(this).dialog('close');
                },
                Sim:function() {
                    $('#form_'+id).attr('action','confirmar-pagamento-parecerista');
                    $('#form_'+id).submit();
                    $("#dialog").dialog("destroy");
                }
            }
        });

        $('.ui-dialog-titlebar-close').remove();
        
        
    }
    
    function cancelarPagamento(id){
        
        $("#dialog").html('Deseja cancelar o pagamento?');
        
        $("#dialog").dialog("destroy");
        $("#dialog").dialog({
            width: '400px',
            modal: true,
            draggable: false,
            resizable: false,
            closeOnEscape: false,
            title: 'Confirmação',
            buttons: { 
                Não:function() {
                    $(this).dialog('close');
                },
                Sim:function() {
                    $('#form_'+id).attr('action','cancelar-pagamento-parecerista');
                    $('#form_'+id).submit();
                }
            }
        });

        $('.ui-dialog-titlebar-close').remove();
        
    }
    
    function visualizarPagamentos(id){
        $('.pagamentos').hide();
        $('#tr_'+id).show();
        
        $('#btnAbrir_'+id).hide();
        $('#btnFechar_'+id).show();
    }

    function esconderPagamentos(id){
        $('#tr_'+id).hide();
        $('#btnAbrir_'+id).show();
        $('#btnFechar_'+id).hide();
    }

</script>