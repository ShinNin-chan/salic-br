<script>

    $(document).ready(function(){
       
    });
    
    function concluirPagamento(id){
        
        var retorno = true;
        
        //Mandar um alerta de confirmação
//        return false;

        if(retorno){
            
            $("#dialog").html('Deseja finalizar o pagamento?');
        
            $("#dialog").dialog("destroy");
            $("#dialog").dialog({
                width: '400px',
                modal: true,
                draggable: false,
                resizable: false,
                closeOnEscape: false,
                title: 'Confirmação',
                buttons: { 
                    Não:function() {
                        $(this).dialog('close');
                    },
                    Sim:function() {
                        $('#form_'+id).submit();
                    }
                }
            });

            $('.ui-dialog-titlebar-close').remove();
            
        }
        
        
        
    }
    
    function visualizarPagamentos(id){
        $('.pagamentos').hide();
        $('#tr_'+id).show();
        
        $('#btnAbrir_'+id).hide();
        $('#btnFechar_'+id).show();
    }

    function esconderPagamentos(id){
        $('#tr_'+id).hide();
        $('#btnAbrir_'+id).show();
        $('#btnFechar_'+id).hide();
    }

</script>