<script type="text/javascript">
    $(document).ready(function(){
        $('.btn_enviar').click(function(){
            var tecnico = $(this).parent().parent().find('select').val(),
                pronac = $(this).attr('pronac');

            if(tecnico==''){
                $("#alerta").dialog("destroy");
                $("#alerta").html('Favor selecionar o técnico!');
                $("#alerta").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
//                    height:160,
                    modal: true,
                    buttons : {
                        'OK' : function(){
                            $(this).dialog('close');
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            } else {
                $("#alerta").dialog("destroy");
                $("#alerta").html('Deseja realmente enviar o relatório para o Técnico?');
                $("#alerta").dialog({
                    resizable: false,
                    title: 'Alerta!',
                    width:320,
//                    height:160,
                    modal: true,
                    buttons : {
                        'Não' : function(){
                            $(this).dialog('close');
                        },
                        'Sim' : function(){
                            $("#alerta").dialog('close');
                            $("#frmTecnico").val(tecnico);
                            $("#frmPronac").val(pronac);
                            $("#formEncaminhamento").submit();
                        }
                    }
                });
                $('.ui-dialog-titlebar-close').remove();
            }
        });

        $('.btn_finalizar').click(function(){
            var pronac = $(this).attr('pronac');

            $("#pergunta").dialog("destroy");
            $("#pergunta").html('Deseja realmente finalizar o relatório e encaminhá-lo para o cordenador de prestação de contas?');
            $("#pergunta").dialog({
                resizable: false,
                title: 'Alerta!',
                width:300,
//                height:180,
                modal: true,
                buttons : {
                    'Não' : function(){
                        $("#pergunta").dialog('close');
                    },
                    'Sim' : function(){
                        $("#pergunta").dialog('close');
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'avaliaracompanhamentoprojeto', 'action' => 'finalizar-relatorio'), '', true); ?>?idpronac=<?php echo $this->idPronac; ?>',
                            data: {
                                pronac: pronac
                            },
                            success: function(data){
                                if(data.resposta){
                                    $("#alerta").dialog("destroy");
                                    $("#alerta").html('<center>Finalizado com sucesso!</center><br /><br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"></div>');
                                    $("#alerta").dialog({
                                        resizable: false,
                                        width:320,
                                        height:120,
                                        modal: true,
                                        title: 'Carregando..'
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                    window.setTimeout('location.reload()', 2000);
                                } else {
                                    alertaModal("Não foi possível finalizar o relatório.");
                                }
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();
        });
        
        $('.devolverPedido').click(function(){
            var pronac = $(this).attr('pronac');
            $("#pergunta").dialog("destroy");
            $("#pergunta").html('Deseja realmente devolver o projeto?');
            $("#pergunta").dialog({
                resizable: false,
                title: 'Alerta!',
                width:340,
//                height:180,
                modal: true,
                buttons : {
                    'Não' : function(){
                        $("#pergunta").dialog('close');
                    },
                    'Sim' : function(){
                        $("#pergunta").dialog('close');
                        $.ajax({
                            type: 'POST',
                            url: '<?php echo $this->url(array('controller' => 'avaliaracompanhamentoprojeto', 'action' => 'devolver-relatorio'), '', true); ?>',
                            data: {
                                pronac: pronac
                            },
                            success: function(data){
                                if(data.resposta){
                                    $("#alerta").dialog("destroy");
                                    $("#alerta").html('<br /><div align="center"><img src="<?php echo $this->baseUrl().'/public/img/ajax.gif'; ?>"></div>');
                                    $("#alerta").dialog({
                                        resizable: false,
                                        width:320,
                                        height:120,
                                        modal: true,
                                        title: 'Carregando..'
                                    });
                                    $('.ui-dialog-titlebar-close').remove();
                                    window.setTimeout('location.reload()', 1000);
                                } else {
                                    alertaModal("Não foi possível devolver o relatório.");
                                }
                            },
                            dataType : 'json'
                        });
                    }
                }
            });
            $('.ui-dialog-titlebar-close').remove();

        });

        $("#btn_pesquisar").click(function(){
            var pronac = $('#pronacPesquisa').val(),
                filtro = $('#tipoFiltro').val();
            window.location = "<?php echo $this->url(array('controller' => 'avaliaracompanhamentoprojeto', 'action' => 'index')); ?>?pag=1&tipoFiltro="+filtro+"&pronac="+pronac;
        });
        
        $('.btn_imprimir').click(function(){
            $('#addCampoXls').remove();
            $('#formImpressao').submit();
        });
        
        $('.btn_xls').click(function(){
            $('#addCampoXls').remove();
            $('#formImpressao').append('<input id="addCampoXls" type="hidden" name="xls" value="1">');
            $('#formImpressao').submit();
        });

    });
    
    function alertaModal(msg){
        $("#alerta").dialog("destroy");
        $("#alerta").html(msg);
        $("#alerta").dialog({
            resizable: false,
            title: 'Alerta!',
            width:330,
            height:170,
            modal: true,
            buttons : {
                'OK' : function(){
                    $(this).dialog('close');
                }
            }
        });
        $('.ui-dialog-titlebar-close').remove();
    }
